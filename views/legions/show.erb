<div class="index">

  <h3><%= @legion.name() %></h3>
  <div class="index-item">
    <ul>
      <li>Strength: <%= @legion.strength() %> cohorts</li>
      <br>
      <li>Moto: "<%= @legion.moto() %>"</li>
    </ul>
  </div>
