  <a href="/legions/<%= @legion.id() %>/edit">Edit Legion</a>
  <br>
  <br>
  <form method="post" action="/legions/<%= @legion.id() %>/delete">
    <input type="submit" value="Disband Legion"/>
  </form>

</div>
